    <!-- JAVASCRIPT LOGIC -->
    <script>
        // --- UTILITY: Label Wrapper for Chart.js (Strict 16-char limit) ---
        function wrapLabel(label) {
            if (typeof label !== 'string' || label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= 16) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- COMMON CHART OPTIONS ---
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: { family: "'Prompt', sans-serif", size: 12 },
                        padding: 20
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(31, 41, 55, 0.9)',
                    titleFont: { family: "'Prompt', sans-serif", size: 14 },
                    bodyFont: { family: "'Prompt', sans-serif", size: 13 },
                    padding: 12,
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                }
            }
        };

        // --- CHART 1: DEVICE DISTRIBUTION (Doughnut) ---
        const ctxDevice = document.getElementById('deviceChart').getContext('2d');
        const deviceData = {
            labels: ['‡∏Ñ‡∏≠‡∏°‡∏û‡∏¥‡∏ß‡πÄ‡∏ï‡∏≠‡∏£‡πå‡∏ô‡∏±‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏ô', '‡∏Ñ‡∏≠‡∏°‡∏û‡∏¥‡∏ß‡πÄ‡∏ï‡∏≠‡∏£‡πå‡∏Ñ‡∏£‡∏π', '‡πÅ‡∏ó‡πá‡∏ö‡πÄ‡∏•‡πá‡∏ï‡∏ô‡∏±‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏ô'].map(wrapLabel),
            datasets: [{
                data: [25, 15, 30], // Data inferred from PDF (Total 40 PCs: 25 student/15 teacher approx + 30 tablets)
                backgroundColor: [
                    '#3B82F6', // Blue-500
                    '#F97316', // Orange-500
                    '#93C5FD'  // Blue-300
                ],
                borderWidth: 0,
                hoverOffset: 4
            }]
        };
        new Chart(ctxDevice, {
            type: 'doughnut',
            data: deviceData,
            options: {
                ...commonOptions,
                cutout: '60%',
                plugins: {
                    ...commonOptions.plugins,
                    legend: { position: 'right' } // Legend on right for doughnut
                }
            }
        });

        // --- CHART 2: INFRASTRUCTURE STATUS (Bar - Comparative) ---
        const ctxStatus = document.getElementById('statusChart').getContext('2d');
        const statusData = {
            labels: ['‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÄ‡∏ô‡πá‡∏ï (Speed)', '‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Ñ‡∏£‡∏≠‡∏ö‡∏Ñ‡∏•‡∏∏‡∏° (Coverage)', '‡∏™‡∏†‡∏≤‡∏û‡∏≠‡∏∏‡∏õ‡∏Å‡∏£‡∏ì‡πå (Condition)', '‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏Ñ‡∏£‡∏π (Skills)'].map(wrapLabel),
            datasets: [
                {
                    label: '‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô (Current)',
                    data: [80, 40, 50, 65], // Estimated scores based on "Moderate condition", "Spotty coverage", "200Mbps(High)"
                    backgroundColor: '#9CA3AF', // Gray
                    borderRadius: 4
                },
                {
                    label: '‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢ (Target)',
                    data: [100, 100, 90, 95],
                    backgroundColor: '#2563EB', // Blue
                    borderRadius: 4
                }
            ]
        };
        new Chart(ctxStatus, {
            type: 'bar',
            data: statusData,
            options: {
                ...commonOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: { callback: (val) => val + '%' }
                    }
                }
            }
        });

        // --- CHART 3: TARGET KPIs (Pie) ---
        const ctxTarget = document.getElementById('targetChart').getContext('2d');
        const targetData = {
            labels: ['LMS Adoption', 'Traditional Methods'].map(wrapLabel),
            datasets: [{
                data: [80, 20], // Goal: >80% adoption
                backgroundColor: [
                    '#10B981', // Green for Success/Goal
                    '#E5E7EB'  // Light Gray
                ],
                borderWidth: 0
            }]
        };
        new Chart(ctxTarget, {
            type: 'pie',
            data: targetData,
            options: {
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: { position: 'bottom' }
                }
            }
        });

    </script>
